# Notion to Hugo Sync Environment Variable Configuration
# Copy this file as .env and fill in your actual values

# Notion API configuration
NOTION_API_KEY=ntn_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Hugo blog configuration (optional, use default values)
HUGO_CONTENT_DIR=./content
HUGO_IMAGE_DIR=./static/images
HUGO_CACHE_FILE=./.notion-sync-cache.json


MAX_RETRIES=3
RETRY_DELAY=1000
BATCH_SIZE=10

# GitHub Actions configuration (if using)
# CUSTOM_DOMAIN=your-domain.com
